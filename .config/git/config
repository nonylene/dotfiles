[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f
[color]
    ui = auto
[alias]
    co = checkout
    cob = checkout -b
    br = browse-remote
    bra = branch
    cm = commit -m
    ca = commit --amend
    com = !git checkout master || git checkout main
    cod = checkout develop
    cp = cherry-pick
    s = status
    gr = grep
    df = diff
    dfc = diff --cached
    pp = pull --prune
    sta = stash
    au = add -u
    aa = add -A
    ap = add -p
    lg = log --graph --all --format='%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s'
    r = reset
[core]
    hooksPath = ~/.config/git/hooks
    pager = less
    autocrlf = input
[user]
  email = nonylene@gmail.com
  name = nonylene
[url "git@github.com:"]
  pushInsteadOf = https://github.com/
[url "git@gist.github.com:"]
  pushInsteadOf = https://gist.github.com/
[ghq]
  root = ~/ghq/
  root = ~/go/src/
[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
	pr = https://{host}/{path}/pull/{short_ref}
	file = "https://{host}/{path}/{file.directory? and :tree or :blob}/{short_rev}/{file}{lines && \"#L%s\" % lines.join(\"-\")}"

[include]
    path = ~/.config/git/config_local
[pull]
	ff = only
